{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors":  true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,
    "noResolve": false,
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "outDir": "dist",
    "target": "es5",
    "strict": true,
    "jsx": "react",
    "lib": ["es2015", "es2016", "dom"]
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "dist",
    "node_modules"
  ]
}
